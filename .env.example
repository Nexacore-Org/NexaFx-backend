# .env.example - Add these to your project's environment variables

# Stellar Configuration
STELLAR_HORIZON_URL=https://horizon-testnet.stellar.org
STELLAR_NETWORK=testnet  # Use 'public' for mainnet
STELLAR_SECRET_KEY=YOUR_STELLAR_SECRET_KEY  # Never commit this to version control!
# Rate Fetcher Configuration
OPENEXCHANGERATES_API_KEY=your_api_key_here
COINGECKO_API_KEY=your_api_key_here

# Rate Update Interval (in milliseconds)
RATE_UPDATE_INTERVAL=300000  # 5 minutes

# API Timeouts and Retries
API_TIMEOUT=5000  # 5 seconds
API_MAX_RETRIES=3
# Application
APP_NAME=Your-Platform-Name
APP_URL=https://your-app-url.com
SUPPORT_EMAIL=support@your-app.com

# SMTP Configuration
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-smtp-username
SMTP_PASSWORD=your-smtp-password
EMAIL_FROM_NAME=Your-Platform
EMAIL_FROM_ADDRESS=no-reply@your-app.com
